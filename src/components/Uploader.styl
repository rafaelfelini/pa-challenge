.uploader
  width 100%
  display flex
  flex-wrap wrap

.uploader__item
  height $unit_uploader-height
  padding-right $unit_spacing-1
  margin-bottom $unit_spacing-1
  width 33.33333%

  &:nth-child(3n+3)
    padding-right 0

  +breakpoint(sm)
    width 25%

    &:nth-child(3n+3)
      padding-right $unit_spacing-1

    &:nth-child(4n+4)
      padding-right 0

.uploader__button
  align-items center
  background-color $color_green-6
  color $color_white
  cursor pointer
  display flex
  flex-direction column
  height 100%
  justify-content center
  text-align center
  transition background-color $unit_transition
  width 100%

  &:hover
    background-color: $color_green-9

.uploader__file
  display flex
  flex-direction column

.uploader__file__preview
  align-items center
  background-color $color_grey-1
  background-repeat no-repeat
  background-size 80%
  background-position center
  display flex
  height 100%
  justify-content center
  overflow hidden
  width 100%

.uploader__file__img
  max-height 100%

.uploader__file__progress
  display block
  margin-top $unit_spacing-0
  height $unit_spacing-0
  width 100%
  background lighten($color_green-8, 30)

.uploader__file__progress__current
  background $color_green-8
  display block
  height $unit_spacing-0
  transition width $unit_transition

.uploader__more
.uploader__label
  display block
  text-align center
  width 100%

.uploader__more
  font-size 3rem

.uploader__input
  display none
