.button
  border none
  border-radius $unit_radius
  color $color_white
  cursor pointer
  display inline-block
  height $unit_button-height
  line-height $unit_button-height
  margin 0 $unit_spacing-1 $unit_spacing-1 0
  padding 0 $unit_spacing-1
  text-decoration none

  &:disabled
    background-color $color_grey-0
    color $color_grey-3
    cursor not-allowed

    &:hover
      background-color $color_grey-0
      color $color_grey-3
      cursor not-allowed

  &:last-child
    margin 0

  &--primary
    background-color $color_orange-7

    &:hover
      background-color $color_orange-6

    &:active
      background-color $color_orange-5

  &--secondary
    background-color $color_green-6

    &:hover
      background-color $color_green-5

    &:active
      background-color $color_green-4
